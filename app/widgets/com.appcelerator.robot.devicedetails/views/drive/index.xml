<Alloy>
	<Window id="window" titleid="drive">
		<Circle module="controls">
			<Arrow module="controls" class="arrow" id="arrowTop" rotation="-90" onTouchstart="driveForward" onTouchend="stopDriving" />
			<Arrow module="controls" class="arrow" id="arrowRight" rotation="0" onTouchstart="driveRight" onTouchend="stopDriving" />
			<Arrow module="controls" class="arrow" id="arrowBottom" rotation="90" onTouchstart="driveBackward" onTouchend="stopDriving" />
			<Arrow module="controls" class="arrow" id="arrowLeft" rotation="180" onTouchstart="driveLeft" onTouchend="stopDriving" />			
		</Circle>
	</Window>
</Alloy>
