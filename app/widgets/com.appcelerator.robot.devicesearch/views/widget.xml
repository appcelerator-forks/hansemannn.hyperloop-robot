<Alloy>
	<Window onOpen="searchDevices" onClose="clearSearchTimeout" id="window" title="Search devices">
		<LeftNavButton title="Cancel" onClick="close" />
		<ImageView class="logo" />
		<View id="content">
			<ActivityIndicator id="loader" />
			<Label id="loaderText" text="Searching for devices ..." />
		</View>
		<AlertDialog id="alert" onClick="handleDialogClick">
			<ButtonNames>
				<ButtonName>Try again</ButtonName>
				<ButtonName>Add manually</ButtonName>
			</ButtonNames>
		</AlertDialog>
	</Window>
</Alloy>
