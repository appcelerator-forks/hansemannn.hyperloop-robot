<Alloy>
	<Window onOpen="searchDevices" onClose="clearSearchTimeout" id="window" titleid="search_devices">
		<LeftNavButton titleid="cancel" onClick="close" />
		<ImageView class="logo" />
		<View id="content">
			<ActivityIndicator id="loader" />
			<Label id="loaderText" textid="search_devices" />
		</View>
		<AlertDialog id="alert" onClick="handleDialogClick">
			<ButtonNames>
				<ButtonName>L("try_again")</ButtonName>
				<ButtonName>L("add_manually")</ButtonName>
			</ButtonNames>
		</AlertDialog>
	</Window>
</Alloy>
